
ORG 0000H

; ---- Form 1000 ----
MOV A, #10        ; A = 10
MOV B, #100       ; B = 100
MUL AB            ; A = 1000 (lower byte)

MOV R0, A         ; Store 1000 in R0

; ---- Form 70 ----
MOV A, #7         ; A = 7
MOV B, #10        ; B = 10
MUL AB            ; A = 70

; ---- Add both ----
ADD A, R0         ; A = 1000 + 70 = 1070

; Final result (1070) is in Accumulator A (AX)

HERE: SJMP HERE   ; Stop execution

END
